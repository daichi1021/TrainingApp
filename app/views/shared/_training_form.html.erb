<%= form_for(@training) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :date, '日付'%>
    <%= f.text_field :date %>

    <%= f.label :condition, 'コンディション' %>
    <%= f.text_field :condition %>

    <%= f.label :training_detail, '練習内容' %>
    <%= f.text_field :training_detail %>

    <%= f.label :running_distance, '走行距離' %>
    <%= f.text_field :running_distance %>

    </br>

    <%= f.submit '作成', class: 'btn btn-large btn-primary' %>
<% end %>